// Firebase Storage rules example
// Allow read to all (public profile images), restrict write to authenticated admin only.
// Replace ADMIN_UID and admin@example.com with your admin values.

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /profile-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == "ADMIN_UID" || (request.auth.token.email == "velanm.cse2024@citchennai.net");
    }
    // deny other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
